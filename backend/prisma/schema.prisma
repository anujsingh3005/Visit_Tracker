generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  uid             String    @unique
  name            String
  email           String    @unique
  password        String
  role            String
  phone           String
  address         String
  designation     String
  profileImageUrl String?
  createdAt       DateTime  @default(now())
  visits          Visit[]
}

model Visit {
  id                Int       @id @default(autoincrement())
  salesperson       User      @relation(fields: [salespersonId], references: [id])
  salespersonId     Int

  clientName        String
  contactPersonName String
  clientPhone       String?
  clientAddress     String?
  clientDetails     String?

  status            String    @default("planned") // planned → in-progress → done

  startTime         DateTime?
  endTime           DateTime?

  startLat          Float?
  startLong         Float?
  endLat            Float?
  endLong           Float?

  entryImageUrl     String?
  exitImageUrl      String?

  suspiciousFlags   String[]  @default([])

  createdAt         DateTime  @default(now())
}
